<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:leon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/title"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/headimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:gravity="center"-->
        <!--android:padding="10dp"-->
        <!--android:text="朱小明"-->
        <!--android:textColor="@color/colorPrimary"-->
        <!--android:textSize="16sp" />-->
    </LinearLayout>

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/keyId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:LtextColor="@color/colorPrimary"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/keyimg"
        leon:leftIconSize="36dp"
        leon:leftText="KEY芯片ID"
        leon:rightStyle="iconCheck"
        android:layout_marginRight="1dp"
        leon:rightTextColor="@color/colorPrimaryDark"
        leon:rightTextSize="14" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/useState"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:LtextColor="@color/colorPrimary"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/useimg"
        leon:leftIconSize="36dp"
        leon:leftText="使用情况"
        leon:rightStyle="iconCheck"
        leon:rightText="未知"
        leon:rightTextColor="@color/colorPrimaryDark"
        leon:rightTextSize="14" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/installApk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:LtextColor="@color/colorPrimary"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/mapimg"
        leon:leftIconSize="36dp"
        leon:leftText="安装应用"
        leon:rightStyle="iconCheck"
        leon:rightText="未知"
        leon:rightTextColor="@color/colorPrimaryDark"
        leon:rightTextSize="14" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/copyMap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:LtextColor="@color/colorPrimary"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/copyimg"
        leon:leftIconSize="36dp"
        leon:leftText="复制文件"
        leon:rightStyle="iconCheck"
        leon:rightTextColor="@color/colorPrimaryDark"
        leon:rightTextSize="14" />

    <com.leon.lib.settingview.LSettingItem
        android:id="@+id/installMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        leon:LtextColor="@color/colorPrimary"
        leon:isShowRightText="true"
        leon:leftIcon="@drawable/switchimg"
        leon:leftIconSize="36dp"
        leon:leftText="安装模式(手动/自动)"
        leon:rightStyle="iconCheck"
        leon:rightTextColor="@color/colorPrimaryDark"
        leon:rightTextSize="14" />
</LinearLayout>